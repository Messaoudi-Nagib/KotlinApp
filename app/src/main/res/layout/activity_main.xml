<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@android:color/holo_blue_light"
        android:visibility="visible"
        >

    <TextView
            android:layout_width="119dp"
            android:layout_height="109dp"
            android:textColor="@android:color/background_light"
            android:text="0"
            android:ems="10"
            android:id="@+id/texView"
            android:textAlignment="center"
            android:fontFamily="sans-serif-condensed"
            android:textSize="72sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"


            app:layout_constraintVertical_bias="0.368" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <Button
            android:text="Toast"
            android:layout_width="87dp"
            android:textSize="20sp"
            android:layout_height="36dp"
            android:background="@color/buttonBackground"
            android:id="@+id/button"
            android:onClick="toastMe"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/texView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="Count"
            android:textSize="20sp"
            android:layout_width="75dp"
            android:background="@color/buttonBackground"
            android:layout_height="35dp"
            android:id="@+id/button2"
            android:onClick="countMe"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/texView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp"/>
    <Button
            android:text="Random"
            android:layout_width="96dp"
            android:textSize="20sp"
            android:background="@color/buttonBackground"
            android:layout_height="34dp"
            android:id="@+id/button3"
            android:onClick="randomMe"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/texView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintStart_toEndOf="@+id/button"
            app:layout_constraintEnd_toStartOf="@+id/button2" android:layout_marginEnd="8dp"/>
</android.support.constraint.ConstraintLayout>